@model List<emp_ferias.Models.ApplicationUser>
@{
    ViewBag.Title = "User Panel";
}

<h2 style="height: inherit">
    User Panel
    <button style="vertical-align: middle; float: right; font-size: 0.6em;" onclick="location.href='@Url.Action("Create", "User")';return false;" class="btn btn-default">Create User</button>
</h2>
<br /><br />

<table class="table table-hover" style="font-size:15px">
    <thead style="font-size:20px">
        <tr>
            <th>ID</th>
            <th>UserName</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit", new { id = item.Id })                   
                </td>
            </tr>
        }
    </tbody>
</table>


@model List<emp_ferias.Models.IndexMarcacaoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="width: 100%">
    <tr>
        <th>
            Request ID
        </th>
        <th>
            User ID
        </th>
        <th>
            User Name
        </th>
        <th>
            Request Date
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Request Reason
        </th>
        <th>
            Notes
        </th>
        <th>
            Approved
        </th>
        <th>
            Reason (If not approved)
        </th>
        <th>
            Approvation User ID
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInicio, "{0:d}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataFim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacoes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aprovado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoAprovacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserNameAprovacao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

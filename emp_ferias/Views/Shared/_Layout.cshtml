    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="@Url.Action("Index", "Home")">
                    <span class="brand-glyph glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                    &nbsp; Gestor de Férias
                </a>
            </li>
            <li>
                <a href="#">
                    <div class="col-xs-2 sidebar-glyph-container bg-primary"><span class="glyphicon glyphicon-dashboard sidebar-glyph" aria-hidden="true"></span></div>
                    Dashboard
                </a>
            </li>
            <li>              
                <a href="@Url.Action("Index", "User")">
                    <div class="col-xs-2 sidebar-glyph-container bg-primary"><span class="glyphicon glyphicon-user sidebar-glyph" aria-hidden="true"></span></div>
                    User Panel                   
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Role")">
                    <div class="col-xs-2 sidebar-glyph-container bg-primary"><span class="glyphicon glyphicon-file sidebar-glyph" aria-hidden="true"></span></div>
                    Role Panel
                </a>
            </li>
            <li id="login-bottom">
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </div>
    <div id="page-content-wrapper">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>@DateTime.Now.Year - Pedro G.</p>
            </footer>
        </div>
    </div>
    <script src="~/bower_components/jquery/dist/jquery.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/bower_components/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/bower_components/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/bower_components/respond/dest/respond.src.js"></script>
    <script src="~/bower_components/moment/min/moment-with-locales.min.js"></script>
    <script src="~/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>

    <script type="text/javascript">

        $(function () {
            $('.divs_Datas').datetimepicker({
                format: 'L',
                locale: 'pt'
            });
        });

    </script>

    @RenderSection("scripts", required: false)

</body>
